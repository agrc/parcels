{
  "name": "parcels",
  "version": "2.0.0",
  "scripts": {
    "build": "vite build",
    "dev": "vite",
    "fix": "npm run format:fix && npm run lint:fix",
    "format:fix": "prettier --loglevel warn --write \"./**/*.{js,jsx,md}\" --ignore-path ./.ignore",
    "format": "prettier --write ./ --ignore-path ./.ignore",
    "lint:fix": "eslint ./ --ext .js --ext .jsx --quiet --fix --ignore-path ./.ignore",
    "lint": "eslint ./ --ext .js --ext .jsx --ignore-path ./.ignore",
    "prepare": "husky install",
    "release": "standard-version",
    "serve": "vite preview",
    "test": "jest"
  },
  "dependencies": {
    "@headlessui/react": "^1.4.1",
    "clsx": "^1.1.1",
    "downshift": "^6.1.7",
    "firebase": "^9.1.3",
    "ky": "^0.28.6",
    "lodash.debounce": "^4.0.8",
    "lodash.escaperegexp": "^4.1.2",
    "lodash.sortby": "^4.7.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-toastify": "^8.0.3",
    "vite-plugin-package-version": "^1.0.2"
  },
  "devDependencies": {
    "@arcgis/core": "^4.21.2",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "autoprefixer": "^10.3.7",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.5",
    "postcss": "^8.3.11",
    "prettier": "^2.4.1",
    "prop-types": "^15.7.2",
    "react-test-renderer": "^17.0.2",
    "sass": "^1.43.3",
    "standard-version": "^9.3.2",
    "tailwindcss": "^2.2.17",
    "vite": "^2.6.11",
    "vite-plugin-react": "^4.0.1",
    "vite-react-jsx": "^1.1.2"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "env": {
      "browser": true,
      "jest": true,
      "node": true
    },
    "rules": {
      "react/jsx-uses-react": "off",
      "react/react-in-jsx-scope": "off",
      "react/prop-types": "off",
      "prettier/prettier": "off"
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "plugin:jsx-a11y/recommended",
      "plugin:prettier/recommended",
      "prettier"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120,
    "semi": true
  },
  "lint-staged": {
    "*.{js,jsx}": "eslint --cache --fix --ignore-path ./.ignore",
    "*.{js,jsx,md}": "prettier --write --ignore-path ./.ignore"
  },
  "standard-version": {
    "header": "# Utah Parcel Change Log\n\n- [parcels.utah.gov](https://parcels.utah.gov)\n- [open issues](https://github.com/agrc/Parcels/issues?state=open)\n",
    "types": [
      {
        "type": "chore",
        "section": "üöÄ Chores",
        "hidden": false
      },
      {
        "type": "feat",
        "section": "‚ú® Features",
        "hidden": false
      },
      {
        "type": "fix",
        "section": "üêõ Bug Fixes",
        "hidden": false
      },
      {
        "type": "docs",
        "section": "‚úèÔ∏è Docs",
        "hidden": false
      },
      {
        "type": "style",
        "section": "üíÑ Styling",
        "hidden": false
      },
      {
        "type": "refactor",
        "section": "‚ôªÔ∏è Code Refactoring",
        "hidden": false
      },
      {
        "type": "test",
        "section": "‚úÖ Tests",
        "hidden": false
      },
      {
        "type": "ci",
        "section": "üë∑ Continuous Integration",
        "hidden": false
      }
    ]
  }
}
