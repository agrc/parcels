@require 'nib';
@import '../../esri/css/esri.css';
@import '../../bootstrap/dist/css/bootstrap.css';
@import '../../agrc/resources/map/BaseMap.css';
@require '../../ijit/themes/standard/layout/SideBarToggler.css';
@import '../../agrc/resources/locate/FindAddress.css';
@import '../../agrc/resources/locate/MagicZoom.css';
@import '../../layer-selector/resources/LayerSelector';
@import 'FindParcel';
@require 'Identify';

$side-bar-width = 300px
$container-margin = 5px

// printing
.dijitButtonNode *
    cursor pointer
    tap-hightight-color transparent
.dijitButtonText
    text-align center
    padding 0 0.3em
.dijitStretch
    white-space nowrap
    backgorund-repeat repeat-x
.esriPrint
    padding 0
.dijitButton
    margin: 0.2em
    vertical-align middle
.dijitInline
    display inline-block
    border 0
    padding 0
.dijitReset
    margin 0
    border 0
    padding 0
    font inherit
    line-height normal
    color inherit
.dijitNoIcon
    display none
.dijitToggleButtonIconChar
    display none !important
.dijitOffScreen
    position absolute !important
    left -10000px !important
    top -10000px !important
// end printing

body, html, .app
    width 100%
    height 100%
    margin 0
    padding 0
    overflow hidden
    color #444

.app
    .container-with-border
        border 1px solid #b5bcc7

/* TITLE PANE */
    .title-container
        position absolute
        top $container-margin
        left $container-margin
        right $container-margin
        padding 8px
        h1
            font-family Arial, sans-serif
            margin 5px 0 0 5px
            font-size 40px
            letter-spacing -2px
        .version
            font-size 10px
            text-decoration none
            vertical-align sub
            margin-left -10px
            letter-spacing 0
        .version:hover
            text-decoration underline !important
        >img
            position absolute
            top -3px
            right 0

    /* SIDE BAR */
    .side-bar-container
        width $side-bar-width
        overflow-y auto
        overflow-x hidden
        position absolute
        left $container-margin
        top 75px
        bottom $container-margin
        .magic-zoom
            position relative
        .magic-zoom.first
            z-index 27
    .side-bar-padder
        padding 10px
        width $side-bar-width
        margin -1px

    /* CENTER (MAP) */
    .center-container
        position absolute
        top 75px
        left $side-bar-width + (2 * $container-margin)
        bottom $container-margin
        right $container-margin
        overflow hidden
        [data-dojo-attach-point='mapDiv']
            position absolute
            top 0
            bottom 0
            left 0
            right 0


/* GENERAL STUFF */
/* remove orange outline in chrome */
*focus
    outline none
